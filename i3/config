# Thunar shortcut
bindsym Mod1+Shift+t exec thunar  

# calcurse
bindsym Mod1+y exec termite -e "zsh -c 'source ~/.zshrc && calcurse'"

# copy and paste buffer
exec --no-startup-id autocutsel

#numlockx
exec_always --no-startup-id numlockx on

# compton
